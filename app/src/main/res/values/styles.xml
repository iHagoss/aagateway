<resources>

    <!-- Neon text style -->
    <style name="NeonText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/neonText</item>
        <item name="android:shadowColor">@color/neonPurpleDark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Neon toggle style -->
    <!-- FIXED: use Widget.AppCompat.ToggleButton (valid parent) -->
    <style name="NeonToggle" parent="Widget.AppCompat.ToggleButton">
        <item name="android:textColor">@color/neonText</item>
        <item name="android:backgroundTint">@color/darkBackground</item>
        <item name="android:buttonTint">@color/neonPurple</item>
    </style>

    <!-- Neon button style -->
    <!-- Includes both android: and non-android attrs for Material3 compatibility -->
    <style name="NeonButton" parent="Widget.Material3.Button">
        <!-- Text color -->
        <item name="android:textColor">@color/neonText</item>
        <item name="textColor">@color/neonText</item>

        <!-- Background tint -->
        <item name="android:backgroundTint">@color/neonPurple</item>
        <item name="backgroundTint">@color/neonPurple</item>

        <!-- Font -->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
